<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:theme="@style/TemaSemBarra"
    tools:context=".CadastroFisico_Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cadastro: Candidato"
        android:textColor="#ffff"
        android:textSize="25dp"
        android:padding="5dp"
        android:gravity="center"
        android:background="#3F51B5"
        />



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="10dp"
            >



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nome Completo:"
            android:textColor="@color/colorFonte"
            android:textSize="20dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"
            />

        <EditText
            android:id="@+id/txtNomeFisico"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/borda"
            android:textColor="@color/colorFonte"
            android:padding="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            />



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CPF:"
            android:textColor="@color/colorFonte"
            android:textSize="20dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            />

        <EditText
            android:id="@+id/txtCpfFisico"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/borda"
            android:textColor="@color/colorFonte"
            android:padding="5dp"
            android:inputType="number"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"

            />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="E-mail:"
        android:textColor="@color/colorFonte"
        android:textSize="20dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"

        />

    <EditText
        android:id="@+id/txtEmailFisico"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/borda"
        android:textColorHint="@color/colorFonte"
        android:textColor="@color/colorFonte"
        android:padding="5dp"
        android:inputType="textEmailAddress"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Telefone:"
                android:textColor="@color/colorFonte"
                android:textSize="20dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                />

            <EditText
                android:id="@+id/txtTel"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/borda"
                android:textColor="@color/colorFonte"
                android:padding="5dp"
                android:inputType="number"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Insira uma senha:"
        android:textColor="@color/colorFonte"
        android:textSize="20dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        />

    <EditText
        android:id="@+id/txtSenha"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/borda"
        android:drawableRight="@drawable/ic_lock_dp"
        android:inputType="textPassword"
        android:padding="10dp"
        android:textColor="@color/colorFonte"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirme sua senha:"
        android:textColor="@color/colorFonte"
        android:textSize="20dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        />

            <EditText
                android:id="@+id/txtSenhaConfirme"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/borda"
                android:drawableRight="@drawable/ic_lock_dp"
                android:inputType="textPassword"
                android:padding="10dp"
                android:textColor="@color/colorFonte"
                android:layout_marginBottom=""
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CÃ³digo de acesso:"
                android:textColor="@color/colorFonte"
                android:textSize="20dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                />

            <EditText
                android:id="@+id/txtCodigoAcesso"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/borda"
                android:inputType="textPassword"
                android:padding="10dp"
                android:textColor="@color/colorFonte"
                />

        </LinearLayout>

    </ScrollView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:orientation="vertical"


        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="horizontal">

            <Button
                android:id="@+id/btnCancelarFisico"
                android:layout_width="150dp"
                android:layout_height="50dp"

                android:layout_weight="1"
                android:background="#F44336"
                android:onClick="CancelarCF"

                android:text="Cancelar"
                android:textColor="#fff"
                android:textSize="20dp" />

            <Button
                android:id="@+id/btnEnviar"
                android:layout_width="150dp"
                android:layout_height="50dp"

                android:layout_weight="1"
                android:background="#4CAF50"
                android:onClick="EnviarCF"

                android:text="Cadastrar"
                android:textColor="#fff"
                android:textSize="20dp"


                />

        </LinearLayout>
    </LinearLayout>


</RelativeLayout>